{
  "name": "Explain Selection",
  "description": "Select text on a page and ask OpenAI to explain it.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_title": "Explain Selection",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
